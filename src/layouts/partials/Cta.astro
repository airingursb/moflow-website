---
import config from '@/config/config.json';

const {
  call_to_action: {
    title,
    description,
    button: { label, link },
  },
} = config;
---

<section
  class="px-5 py-20 xl:py-[120px] max-w-[95%] md:max-w-[90%] lg:max-w-[85%] mx-auto"
>
  <div class="container">
    <div
      class="bg-[#ECF7FD] row justify-center text-center rounded-3xl px-[30px] pb-[75px] pt-16"
    >
      <div class="lg:col-12">
        <div class="row">
          <div class="lg:col-12">
            <h2 class="h1 text-[#1B5192] max-w-[384px] mx-auto">{title}</h2>
            <a
              class="btn btn-blue mt-8 hidden sm:inline-block"
              href="#tally-open=mOjB9a&tally-emoji-text=ðŸ‘‹&tally-emoji-animation=wave&tally-layout=modal&tally-width=600"
              onclick="gtag('event', 'click_btn_join', { 'event_name': 'click_btn_join', 'event_category': 'cta', 'event_label': 'button' });"
              >{label}</a
            >
            <a
              class="btn btn-blue mt-8 sm:hidden"
              href="https://tally.so/r/mOjB9a"
              onclick="gtag('event', 'click_btn_join', { 'event_name': 'click_btn_join', 'event_category': 'cta', 'event_label': 'button' });"
            >
              {label}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
